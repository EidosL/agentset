generator client {
    provider     = "prisma-client" // ESM-first
    engineType   = "client" // No rust engines
    output       = "../../generated"
    runtime      = "vercel-edge"
    moduleFormat = "esm"
}

generator nodeClient {
    provider     = "prisma-client" // ESM-first
    engineType   = "client" // No rust engines
    output       = "../../generated-node"
    runtime      = "nodejs"
    moduleFormat = "esm"
}

generator json {
    provider = "prisma-json-types-generator"
}

datasource db {
    provider  = "postgresql"
    url       = env("DATABASE_URL")
    directUrl = env("DIRECT_URL")
}
